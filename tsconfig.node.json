{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "target": "ESNext",
    "types": ["node"],
    "preserveSymlinks": true
  },
  "include": [
    "vite.config.ts",
    "eslint.config.ts" 
  ]
}